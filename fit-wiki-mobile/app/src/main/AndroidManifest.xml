<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.nsu.ccfit.android.fitwiki">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.signup.SignUpActivity"></activity>
        <activity android:name=".view.signin.SignInActivity" />
        <activity
            android:name=".SingInActivity"
            android:label="@string/title_activity_sing_in" />
        <activity
            android:name=".view.navigation.MenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.viewarticle.ViewArticleActivity" />
        <activity android:name=".view.viewsection.ViewSectionActivity" />
        <activity android:name=".view.viewuserprofile.ViewUserProfileActivity" />
        <activity android:name=".view.viewmyprofile.ViewMyProfileActivity" />
        <activity android:name=".view.viewoffered.ViewOfferedActivity" />
        <activity android:name=".view.createarticle.CreateArticleActivity" />
        <activity android:name=".view.editarticle.EditArticleActivity" />
    </application>

</manifest>